<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
  <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
  <id>com.nutys.simplelog.SimpleLog</id>

  <!-- Public plugin name should be written in Title Case.
       Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
  <name>SimpleLog</name>

  <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
  <vendor url="https://github.com/nutys-up/SimpleLog">nutys</vendor>

  <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
       Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
  <description><![CDATA[
    <b>SimpleLog</b> is a simple plugin for IntelliJ IDEA that allows you to insert and delete console.log statements with customizable log statement format.
     <br/>
     <b>Features:</b><br/>
     <ul>
          <li>（Ctrl+Alt+A）Insert a console.log statement at the cursor position.</li>
          <li>（Ctrl+Alt+D）Delete all console.log statements that start with "SimpleLog=>".</li>
     </ul>
  ]]></description>

  <!-- Product and plugin compatibility requirements.
       Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
  <depends>com.intellij.modules.platform</depends>

  <!-- Extension points defined by the plugin.
       Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
  <extensions defaultExtensionNs="com.intellij">

  </extensions>

  <actions>
    <action id="SimpleLog.InsertLogStatement" class="com.nutys.simplelog.InsertLogStatementAction"
            text="Insert console.log Statement" description="Inserts a console.log statement at the cursor position.">
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt A"/>
    </action>
    <action id="SimpleLog.DeleteLogStatements" class="com.nutys.simplelog.DeleteLogStatementsAction"
            text="Delete All SimpleLog Statements" description="Deletes all console.log statements that start with SimpleLog=>">
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt D"/>
    </action>
  </actions>
</idea-plugin>